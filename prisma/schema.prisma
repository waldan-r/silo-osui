generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// --- Tenant ---
model Organization {
  id            String   @id @default(cuid())
  slug          String   @unique // URL-friendly identifier (e.g., "osui-mahawaditra")
  name          String
  driveFolderId String   // The Root Folder ID in Google Drive for this Org
  users         User[]
  scores        Score[]
  createdAt     DateTime @default(now())
}

// --- Users ---
model User {
  id             String       @id @default(cuid())
  email          String       @unique
  name           String?
  role           Role         @default(MEMBER)
  instrument     String?      // Primary instrument (e.g., "Violin 1")
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  
  @@index([organizationId])
}

// --- Inventory ---
model Score {
  id             String       @id @default(cuid())
  code           String       // The 5-char code [N0001]
  title          String
  composer       String
  arranger       String?
  metadata       Json?        // Flexible storage for Genre, Duration, Key, etc.
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  parts          Part[]

  @@unique([organizationId, code]) // Code must be unique within the Org
}

// --- Files ---
model Part {
  id             String   @id @default(cuid())
  driveId        String   // Google Drive File ID
  filename       String   // Original filename for reference
  instrumentTags String[] // Extracted tags: ["Oboe 1", "Oboe 2"]
  scoreId        String
  score          Score    @relation(fields: [scoreId], references: [id])

  webViewLink    String   // open new tab
  webContentLink String?  // for direct download/embed
}

enum Role {
  SUPERADMIN
  ADMIN
  MEMBER
  GUEST
}

